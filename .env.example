# ==================================
# Configurações do SyncCore
# ==================================

# Banco de Dados PostgreSQL
DB_HOST=seu_host_postgres
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=sua_senha_segura

# JWT Secret (gere uma chave segura com: openssl rand -base64 32)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui

# URL do Site (URL pública do seu app)
NEXT_PUBLIC_SITE_URL=https://seudominio.com.br

# ImageKit.io - Upload de Imagens
IMAGEKIT_PUBLIC_KEY=public_sua_key
IMAGEKIT_PRIVATE_KEY=private_sua_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/sua_conta

# Resend - Envio de E-mails
RESEND_API_KEY=re_sua_api_key
FROM_EMAIL=noreply@seudominio.com.br

# RabbitMQ - Mensageria (para notificações em tempo real)
RABBITMQ_URL=amqp://usuario:senha@localhost:5672

# Webhook Secret (para APIs internas)
WEBHOOK_SECRET=sua_chave_webhook_secreta

# Evolution API - Integração WhatsApp
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua_api_key_evolution

# N8N Webhook URL (para receber mensagens do WhatsApp)
N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/whatsapp
